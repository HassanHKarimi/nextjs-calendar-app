# Demo Mode (set to "true" to use without a database)
NEXT_PUBLIC_DEMO_MODE="true"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Database (only needed if NEXT_PUBLIC_DEMO_MODE="false")
DATABASE_URL="postgresql://username:password-pooler.us-east-1.aws.neon.tech/neondb?sslmode=require"

# Port (optional, defaults to 3000)
PORT="3000"

# OAuth providers (optional, not used in demo mode)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
